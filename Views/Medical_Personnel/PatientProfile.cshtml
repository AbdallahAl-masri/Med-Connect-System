@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>View Patient</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        h3,
        h4 {
            display: inline;
        }
    </style>
</head>
<body>
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Medical_Personnel")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo">
            </a>
            <h2 class="dr-name">View Patient</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as @ViewBag.UserName</span>
                <a href="SignIn.html" class="btn btn-outline-dark ms-3">Logout</a>
            </div>
        </div>
    </nav>
    <br />
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Medical_Personnel")" class="nav-link active">
                                <h5><i class="bi bi-house-fill"></i> Home</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("ReserveAppointment", "Medical_Personnel")" class="nav-link">
                                <h5><i class="bi bi-calendar-plus"></i> Reserve Appointment</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("ManageAppointments", "Medical_Personnel")" class="nav-link">
                                <h5><i class="bi bi-calendar-check"></i> Manage Appointments</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("PatientProfile", "Medical_Personnel")" class="nav-link">
                                <h5><i class="bi bi-person-lines-fill"></i> Patient Profile</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("InsertInsuranceInfo", "Medical_Personnel")" class="nav-link">
                                <h5><i class="bi bi-file-earmark-medical"></i> Insert Insurance Info</h5>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>



            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="box">
                    <h2>Patient Record</h2>
                    <form asp-action="PatientProfile" method="post">
                        <div class="mb-3">
                            <label for="PatientProfile" class="form-label">Patient Profile<span class="text-danger"> *</span></label>
                            <select class="form-select" id="PatientProfile" name="PatientProfile">
                                <option value="">Select an option</option>
                                <option value="Diagnosis">Diagnosis</option>
                                <option value="LabTests">Lab Tests</option>
                                <option value="Radiology">Radiology</option>
                                <option value="Prescription">Prescription</option>
                            </select>
                        </div>
                        <input class="btn btn-primary" type="submit" value="View" />
                    </form>
                </div>
            </main>
        </div>
    </div>
    <div class="footer">
        <p>&copy; 2024 Med-Connect. All rights reserved.</p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
