@model MCS.Models.StaffLoginModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Staff Login</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .header {
            padding: 10px 0 10px 10px;
            font-family: Arial;
            background: #5FB0FF;
            margin-top: 50px;
            height: 100px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="header">
                    <img src="~/images/logo2.png" alt="Hospital Logo" height="80" style="display: block; margin-left: auto; margin-right: auto; width: 60%;">
                </div>
                <h2>Staff Login</h2>
                @if (TempData["LogoutSuccess"] != null)
                {
                    <div class="alert alert-success" role="alert">
                        You have been successfully logged out.
                    </div>
                }
                <form asp-action="StaffLogin" method="post">
                    <div class="form-group">
                        <label asp-for="StaffID">Staff ID</label>
                        <input type="text" id="StaffID" name="StaffID" class="form-control" placeholder="Enter staff ID" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">Password</label>
                        <input type="password" id="Password" name="Password" class="form-control" placeholder="Enter password" />
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
