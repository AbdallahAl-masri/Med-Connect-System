@model MCS.Models.EnterDiagnosesModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enter Diagnosis</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        h3,
        h4 {
            display: inline;
        }
    </style>
</head>
<body>
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Doctor")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo">
            </a>
            <h2 class="dr-name">Order Radiology</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as @ViewBag.UserName</span>
                <form asp-controller="Authentication" asp-action="StaffLogin" method="post" class="ms-3">
                    <button type="submit" class="btn btn-outline-dark">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <br />
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a href="@Url.Action("Index", "Doctor")" class="nav-link active">
                                <h5><i class="bi bi-house-fill"></i> Home</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("ViewPatient", "Doctor")" class="nav-link">
                                <h5><i class="bi bi-person-fill"></i> View Patients</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("OrderLabTest", "Doctor")" class="nav-link">
                                <h5><i class="bi bi-eyedropper"></i> Order Lab Tests</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("OrderRadiology", "Doctor")" class="nav-link">
                                <h5><i class="bi bi-image-fill"></i> Order Radiology</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("PrescribeMedicine", "Doctor")" class="nav-link">
                                <h5><i class="bi bi-prescription"></i> Prescribe Medicine</h5>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("EnterDiagnosis", "Doctor")" class="nav-link">
                                <h5><i class="bi bi-file-earmark-medical-fill"></i> Enter Diagnosis</h5>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="box">
                    <h2>Lab Test Details</h2>
                    <form asp-action="EnterDiagnosis" method="post">
                        <div class="mb-3">
                            <label asp-for="DoctorID" class="form-label">Doctor's ID'<span class="text-danger"> *</span></label>
                            <input asp-for="DoctorID" class="form-control" placeholder="Enter Image type" />
                            <span asp-validation-for="DoctorID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PatientID" class="form-label">Patient's' ID<span class="text-danger"> *</span></label>
                            <input asp-for="PatientID" class="form-control" placeholder="Enter patient ID" />
                            <span asp-validation-for="PatientID" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PatientName" class="form-label">Patient's Name<span class="text-danger"> *</span></label>
                            <input asp-for="PatientName" class="form-control" placeholder="Enter patient Name" />
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="DiagnoseDate" class="form-label">Test Date<span class="text-danger"> *</span></label>
                            <input asp-for="DiagnoseDate" class="form-control" />
                            <span asp-validation-for="DiagnoseDate" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Diagnosed" class="form-label">Diagnose<span class="text-danger"> *</span></label>
                            <textarea asp-for="Diagnosed" class="form-control"></textarea>
                            <span asp-validation-for="Diagnosed" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </main>
        </div>
    </div>
    <div class="footer">
        <p>&copy; 2024 Med-Connect. All rights reserved.</p>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
