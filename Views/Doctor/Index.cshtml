@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Header -->
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Doctor")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo">
            </a>
            <h2 class="dr-name">Dashboard</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as Dr. Smith</span>
                <a href="Sign In.html" class="btn btn-outline-dark ms-3">Logout</a>
            </div>
        </div>
    </nav>
    <br>
    <div class="container-fluid">

        <!-- Main Content -->
        <main>
            <div class="box">
                <h2>Dashboard</h2>
                <p>Use the sections below to navigate to different functionalities.</p>
                <div class="row g-3 mt-3">
                    <!-- Card for View Patients -->
                    <div class="row">
                        <div class="col-md-4">
                            <div class="card">
                                <a href="@Url.Action("ViewPatient", "Doctor")" class="card-body text-center">
                                    <i class="bi bi-person-fill display-4"></i>
                                    <h5 class="card-title mt-3">View Patients</h5>
                                    <p class="card-text">See all patients and their medical records.</p>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <a href="@Url.Action("OrderLabTest", "Doctor")" class="card-body text-center">
                                    <i class="bi bi-eyedropper display-4"></i>
                                    <h5 class="card-title mt-3">Order Lab Tests</h5>
                                    <p class="card-text">Order lab tests for patients.</p>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="card">
                                <a href="@Url.Action("OrderRadiology", "Doctor")" class="card-body text-center">
                                    <i class="bi bi-image-fill display-4"></i>
                                    <h5 class="card-title mt-3">Order Radiology</h5>
                                    <p class="card-text">Request radiology tests.</p>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <a href="@Url.Action("PrescribeMedicine", "Doctor")" class="card-body text-center">
                                    <i class="bi bi-prescription display-4"></i>
                                    <h5 class="card-title mt-3">Prescribe Medicine</h5>
                                    <p class="card-text">Prescribe medication to patients.</p>
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <a href="@Url.Action("EnterDiagnosis", "Doctor")" class="card-body text-center">
                                    <i class="bi bi-file-earmark-medical-fill display-4"></i>
                                    <h5 class="card-title mt-3">Enter Diagnosis</h5>
                                    <p class="card-text">Enter diagnosis information.</p>
                                </a>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </main>
    </div>
    <div class="footer">
        <p>&copy; 2024 Med-Connect. All rights reserved.</p>
    </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
