@model MCS.Models.UpdateStorageViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Updaate Storage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="~/css/site.css" rel="stylesheet" />
</head>

<body>
    <!-- Header -->
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Pharmacist")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo" />
            </a>
            <h2 class="dr-name">Update Storage</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as Dr. Smith</span>
                <a href="@Url.Action("SignOut", "Account")" class="btn btn-outline-dark ms-3">Logout</a>
            </div>
        </div>
    </nav>
    <br>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="@Url.Action("Index", "Pharmacist")" class="nav-link active"><h5><i class="bi bi-house-fill"></i> Home</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("SearchPatient", "Pharmacist")" class="nav-link"><h5><i class="bi bi-search"></i> Search Patient</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("UpdateStorage", "Pharmacist")" class="nav-link"><h5><i class="bi bi-box-seam"></i> Update Storage</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("MedicineLookup", "Pharmacist")" class="nav-link"><h5><i class="bi bi-capsule"></i> Medicine Lookup</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("AlternativeMedicines", "Pharmacist")" class="nav-link"><h5><i class="bi bi-book"></i> Alternative Medicines</h5></a></li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="box">
                    <h2>Update Storage</h2>
                    <p>Use the form below to update the medicine storage.</p>
                    <!-- Update Storage Form -->
                    <form asp-action="UpdateStorage" method="post">
                        <div class="mb-3">
                            <label for="medicineID" class="form-label">Medicine ID</label>
                            <input type="text" class="form-control" id="medicineID" name="MedicineId" placeholder="Enter Medicine ID">
                        </div>
                        <div class="mb-3">
                            <label for="medicineName" class="form-label">Medicine Name</label>
                            <input type="text" class="form-control" id="medicineName" name="MedicineName" placeholder="Enter Medicine Name">
                        </div>
                        <div class="mb-3">
                            <label for="Stock" class="form-label">Stock</label>
                            <input type="number" class="form-control" id="Stock" name="Stock" placeholder="Enter Stock">
                        </div>
                        <div class="mb-3">
                            <label for="medicineShelf" class="form-label">Shelf</label>
                            <input type="text" class="form-control" id="medicineShelf" name="Shelf" placeholder="Enter Shelf in Pharmacy">
                        </div>
                        <button type="submit" class="btn btn-primary">Update Storage</button>
                    </form>
                    <hr />
                    <!-- Existing Storage Button and Table -->
                    <div class="table-container">
                        <h3>Existing Storage</h3>
                        <button class="btn btn-info mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#existingStorageTable" aria-expanded="false" aria-controls="existingStorageTable">
                            Show/Hide Existing Storage
                        </button>
                        <div class="collapse" id="existingStorageTable">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Medicine Name</th>
                                        <th>Stock</th>
                                        <th>Shelf</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.ExistingStorage)
                                    {
                                        <tr>
                                            <td>@item.MedicineName</td>
                                            <td>@item.Stock</td>
                                            <td>@item.Shelf</td>
                                            <td>
                                                <form asp-action="Delete" method="post" style="display:inline;">
                                                    <input type="hidden" name="id" value="@item.MedicineId" />
                                                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
        <div class="footer">
            <p>&copy; 2024 Med-Connect. All rights reserved.</p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
