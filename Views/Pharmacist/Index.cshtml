@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body>
    <!-- Header -->
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Pharmacist")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo">
            </a>
            <h2 class="dr-name">Dashboard</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as Dr. Smith</span>
                <a href="@Url.Action("Logout", "Pharmacist")" class="btn btn-outline-dark ms-3">Logout</a>
            </div>
        </div>
    </nav>
    <br>
    <div class="container-fluid">
        <!-- Main Content -->
        <main>
            <div class="box">
                <h2>Dashboard</h2>
                <p>Use the sections below to navigate to different functionalities.</p>
                <div class="row g-3 mt-3">
                    <!-- Card for View Patients -->
                    <div class="col-md-6">
                        <div class="card">
                            <a class="card-body text-center" href="@Url.Action("SearchPatient", "Pharmacist")">
                                <i class="bi bi-search display-4"></i>
                                <h5 class="card-title mt-3">Search Patients</h5>
                                <p class="card-text">Search for a patient by id to see their prescribed medicine.</p>
                                <button class="btn btn-primary">Go</button>
                            </a>
                        </div>
                    </div>
                    <!-- Card for Order Lab Tests -->
                    <div class="col-md-6">
                        <div class="card">
                            <a class="card-body text-center" href="@Url.Action("UpdateStorage", "Pharmacist")">
                                <i class="bi bi-box-seam display-6"></i>
                                <h5 class="card-title mt-4">Update Storage</h5>
                                <p class="card-text">Look up how much of a medicine is in stock and see their expiration date.</p>
                                <button class="btn btn-primary">Go</button>
                            </a>
                        </div>
                    </div>
                    <!-- Card for Order Radiology -->
                    <div class="col-md-6">
                        <div class="card">
                            <a class="card-body text-center" href="@Url.Action("MedicineLockup", "Pharmacist")">
                                <i class="bi bi-capsule display-4"></i>
                                <h5 class="card-title mt-3">Medicine Lockup</h5>
                                <p class="card-text">Find medicine’s shelf location.</p>
                                <button class="btn btn-primary">Go</button>
                            </a>
                        </div>
                    </div>
                    <!-- Card for Prescribe Medicine -->
                    <div class="col-md-6">
                        <div class="card">
                            <a class="card-body text-center" href="@Url.Action("AlternativeMedicines", "Pharmacist")">
                                <i class="bi bi-book display-4"></i>
                                <h5 class="card-title mt-3">Alternative Medicines</h5>
                                <p class="card-text">See alternative medicine if one is out of stock.</p>
                                <button class="btn btn-primary">Go</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <div class="footer">
        <p>&copy; 2024 Med-Connect. All rights reserved.</p>
    </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
