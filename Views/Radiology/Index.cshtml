@model MCS.Models.TestResultModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        h3,
        h4 {
            display: inline;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Radiology")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo" />
            </a>
            <h2 class="dr-name">Dashboard</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as @ViewBag.UserName</span>
                <a href="@Url.Action("SignIn", "Account")" class="btn btn-outline-dark ms-3">Logout</a>
            </div>
        </div>
    </nav>
    <br />
    <div class="container-fluid" style="height: 74%;">
        <!-- Main Content -->
        <main>
            <div class="box">
                <h2>Dashboard</h2>
                <p>Use the sections below to navigate to different functionalities.</p>
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <div class="card text-center">
                            <a class="card-body" href="@Url.Action("SearchPatient", "Radiology")">
                                <i class="bi bi-search display-4"></i>
                                <h5 class="card-title">Search Patient</h5>
                                <p class="card-text">Search for a patient to see their ordered radiology pictures.</p>
                                <button class="btn btn-primary">Go</button>
                            </a>
                        </div>
                    </div>
                    <div class="col-md-6 mb-3">
                        <div class="card text-center">
                            <a class="card-body" href="@Url.Action("UploadTestResult", "Radiology")">
                                <i class="bi bi-upload display-4"></i>
                                <h5 class="card-title">Upload Test Results</h5>
                                <p class="card-text">Upload results for patients.</p>
                                <button class="btn btn-primary">Go</button>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
    <div class="footer">
        <p>&copy; 2024 Med-Connect. All rights reserved.</p>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
