@model MCS.Models.TestReportModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Upload Test Results</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        h3,
        h4 {
            display: inline;
        }
    </style>
</head>

<body>
    <!-- Header -->
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "LabTechnician")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo" />
            </a>
            <h2 class="dr-name">Upload Test Results</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as @ViewBag.UserName</span>
                <form asp-controller="Authentication" asp-action="StaffLogin" method="post" class="ms-3">
                    <button type="submit" class="btn btn-outline-dark">Logout</button>
                </form>
            </div>
        </div>
    </nav>
    <br>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="@Url.Action("Index", "LabTechnician")" class="nav-link active"><h5><i class="bi bi-house-fill"></i> Home</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("SearchPatient", "LabTechnician")" class="nav-link"><h5><i class="bi bi-search"></i> Search Patient</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("UploadTestResult", "LabTechnician")" class="nav-link"><h5><i class="bi bi-upload"></i> Upload Test Results</h5></a></li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="box">
                    <h2>Add Test Report</h2>
                    <form asp-action="UploadTestResult" method="post">
                        <div class="mb-3">
                            <label asp-for="PatientId" class="form-label">Patient ID<span class="text-danger"> *</span></label>
                            <input asp-for="PatientId" class="form-control" placeholder="Enter patient ID" />
                            <span asp-validation-for="PatientId" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="PatientName" class="form-label">Patient Name<span class="text-danger"> *</span></label>
                            <input asp-for="PatientName" class="form-control" placeholder="Enter patient name" />
                            <span asp-validation-for="PatientName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="TestName" class="form-label">Test Type<span class="text-danger"> *</span></label>
                            <input asp-for="TestName" class="form-control" placeholder="Enter test name" />
                            <span asp-validation-for="TestName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="ReportContent" class="form-label">Report Content<span class="text-danger"> *</span></label>
                            <textarea asp-for="ReportContent" class="form-control" placeholder="Enter report content"></textarea>
                            <span asp-validation-for="ReportContent" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Report</button>
                    </form>
                </div>
            </main>
        </div>
        <div class="footer">
            <p>&copy; 2024 Med-Connect. All rights reserved.</p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
