@model IEnumerable<MCS.Models.TestResultModel>
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Patient</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        h3,
        h4 {
            display: inline;
        }
    </style>
</head>
<body>
    <!-- Header -->
    <nav class="navbar bg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "LabTechnician")">
                <img src="~/images/logo2.png" alt="Hospital Logo" class="logo" />
            </a>
            <h2 class="dr-name">Search Patient</h2>
            <div class="d-flex">
                <span class="navbar-text">Logged in as @ViewBag.UserName</span>
                <a href="@Url.Action("Logout", "Account")" class="btn btn-outline-dark ms-3">Logout</a>
            </div>
        </div>
    </nav>
    <br/>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-3 col-lg-2 d-md-block sidebar">
                <div class="position-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item"><a href="@Url.Action("Index", "Labtechnician")" class="nav-link active"><h5><i class="bi bi-house-fill"></i> Home</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("SearchPatient", "Labtechnician")" class="nav-link"><h5><i class="bi bi-search"></i> Search Patient</h5></a></li>
                        <li class="nav-item"><a href="@Url.Action("UploadTestResult", "Labtechnician")" class="nav-link"><h5><i class="bi bi-upload"></i> Upload Test Results</h5></a></li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
                <div class="box">
                    <h2>Search Patient by ID or Name</h2>
                    <form asp-action="SearchPatient" method="post" class="input-group mb-3">
                        <input type="text" class="form-control" name="searchTerm" placeholder="Enter patient ID">
                        <button class="btn btn-primary" type="submit">Search</button>
                    </form>

                    <!-- Results Table -->
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Test Name</th>
                                        <th>Date Ordered</th>
                                        <th>Result</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.TestType</td>
                                            <td>@item.TestDate.ToString("yyyy-MM-dd")</td>
                                            <td>@item.Result</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p>No results found.</p>
                    }
                </div>
            </main>
        </div>
        <div class="footer">
            <p>&copy; 2024 Med-Connect. All rights reserved.</p>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

